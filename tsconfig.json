{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true, // so we do not have to check all types for every library 
        "outDir": "./dist",
        "rootDir": "./",
    },
    "include": ["src/**/*.ts", "types.d.ts", "test/**/*.test.ts"],
    "exclude": ["node_modules"]
}
     
